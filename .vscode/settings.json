{
	"editor.quickSuggestions": {
		"strings": true
	},
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
	},
	"[python]": {
		"editor.defaultFormatter": "ms-python.autopep8"
	},
	"[csharp]": {
		"editor.defaultFormatter": "ms-dotnettools.csharp",
		"editor.formatOnSave": true,
		"editor.tabSize": 4,
		"editor.detectIndentation": true,
	},
	"cSpell.words": [
		"autoplay",
		"gameplay",
		"Gameplay",
		"godot",
		"Mathf",
		"tscn"
	]
}