{
    "dotnet.defaultSolution": "src/dice-rolling.sln",
    "dotnet.unitTests.runSettingsPath": "src/.runsettings",
    "editor.quickSuggestions": {
        "strings": true
    },
    "search.exclude": {
        "**/.git": true,
        "**/node_modules": true,
        "**/tmp": true
    },
    "files.exclude": {
        "**/.git": false,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.ssh": true,
        "**/*.uid": true,
        "**/node_modules": true,
        "src/.godot": true,
        "docs/.docusaurus": true,
        "docs/content/api": false,
        "docs/api": true
    },
    "eslint.workingDirectories": [
        {
            "directory": "./",
            "changeProcessCWD": true
        }
    ],
    "eslint.options": {
        "ignorePattern": "node_modules/**"
    },
    "cmake.ignoreCMakeListsMissing": true,
    "[csharp]": {
        "editor.defaultFormatter": "ms-dotnettools.csharp",
        "editor.formatOnSave": true,
        "editor.tabSize": 4,
        "editor.detectIndentation": true,
    },
    "[markdown]": {
        "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": false
        }
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "cSpell.ignoreRegExpList": [
        "uid://[^\\s]+",
        "id=\"([^\"]+)\"",
        "/.*SubResource\\(\".*\"\\).*/gm",
        "/.*ExtResource\\(\".*\"\\).*/gm",
        "\"res.+\"",
        "\\w+\\s*=\\s*\"Lorem ipsum[^\"]*\""
    ],
}