{
    "editor.quickSuggestions": {
        "strings": true
    },
    "search.exclude": {
        "**/.git": true,
        "**/node_modules": true,
        "**/tmp": true
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8"
    },
    "[csharp]": {
        "editor.defaultFormatter": "ms-dotnettools.csharp",
        "editor.formatOnSave": true,
        "editor.tabSize": 4,
        "editor.detectIndentation": true,
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "cSpell.ignoreRegExpList": [
        "uid://[^\\s]+",
        "id=\"([^\"]+)\"",
        "/.*SubResource\\(\".*\"\\).*/gm",
        "/.*ExtResource\\(\".*\"\\).*/gm",
        "\"res.+\"",
        "\\w+\\s*=\\s*\"Lorem ipsum[^\"]*\""
    ],
    "cSpell.words": [
        "autoload",
        "autoplay",
        "bbcode",
        "Bbcode",
        "collada",
        "deadzone",
        "diceroll",
        "docfx",
        "docusaurus",
        "dotnet",
        "dracula",
        "firefox",
        "gameplay",
        "Gameplay",
        "ghpages",
        "github",
        "godot",
        "imrp",
        "kovkel",
        "Lerp",
        "Mathf",
        "maxage",
        "maxheld",
        "Newtonsoft",
        "nikeee",
        "nunit",
        "paramref",
        "premult",
        "srgb",
        "staticrypt",
        "STATICRYPT",
        "tscn",
        "unicode",
        "vram"
    ]
}